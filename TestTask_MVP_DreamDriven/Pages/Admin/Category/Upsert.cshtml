@page
@model TestTask_MVP_DreamDriven.Pages.Admin.Category.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- todo: fix bug with adding a new category after editing -->

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">Category</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row mb-3">
                    <label asp-for="CategoryObj.Name" class="col-form-label col-3"></label>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryObj.Name" />
                        <span class="text-danger" asp-validation-for="CategoryObj.Name"></span>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label asp-for="CategoryObj.DisplayCourses" class="col-form-label col-3"></label>
                    <div class="col-9">
                        <input class="form-control" asp-for="CategoryObj.DisplayCourses" />
                        <span class="text-danger" asp-validation-for="CategoryObj.DisplayCourses"></span>
                    </div>
                </div>
            </div>

            <div class="col-9 offset-3 mt-3">
                <div class="row">
                    <div class="col-6 text-center">
                        @if (Model.CategoryObj.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                    </div>
                    <div class="col-6 text-center">
                        <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
