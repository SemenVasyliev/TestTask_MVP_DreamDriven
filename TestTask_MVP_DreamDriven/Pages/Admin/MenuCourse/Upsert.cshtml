@page
@model TestTask_MVP_DreamDriven.Pages.Admin.MenuCourse.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if(Model.MenuCourseObj.MenuCourse.Id != 0)
            {
                <input type="hidden" asp-for="MenuCourseObj.MenuCourse.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.MenuCourseObj.MenuCourse.Id != 0 ? "Update" : "Create") Menu Courses</h2>
            </div>

            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="MenuCourseObj.MenuCourse.Name" />
                        <span class="text-danger" asp-validation-for="MenuCourseObj.MenuCourse.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.AmountOfLessons"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="MenuCourseObj.MenuCourse.AmountOfLessons" />
                        <span class="text-danger" asp-validation-for="MenuCourseObj.MenuCourse.AmountOfLessons"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.Description"></label>
                    </div>
                    <div class="col-9">
                        <textarea class="form-control" asp-for="MenuCourseObj.MenuCourse.Description" id="txtDesc" style="height:200px;"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.Image"></label>
                    </div>
                    <div class="col-9">
                        <input type="file" class="form-control" name="files" id="uploadBox" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.CategoryId"></label>
                    </div>
                    <div class="col-9">
                        @Html.DropDownListFor(m => m.MenuCourseObj.MenuCourse.CategoryId,
                        new SelectList(Model.MenuCourseObj.CategoryList, "Value", "Text"),
                        "- Please select a Category -",
                        new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="MenuCourseObj.MenuCourse.CategoryId"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="MenuCourseObj.MenuCourse.ComplexityId"></label>
                    </div>
                    <div class="col-9">
                        @Html.DropDownListFor(m => m.MenuCourseObj.MenuCourse.ComplexityId,
                        new SelectList(Model.MenuCourseObj.ComplexityList, "Value", "Text"),
                        "- Please select a Food Type -",
                        new { @class = "form-control" })
                        <span class="text-danger" asp-validation-for="MenuCourseObj.MenuCourse.ComplexityId"></span>
                    </div>
                </div>
            <div class="col-9 offset-3 mt-3">
                <div class="row">
                    <div class="col-6 text-center">
                            @if (Model.MenuCourseObj.MenuCourse.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary form-control">Create</button>
                            }

                        </div>
                        <div class="col-6">
                            <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.MenuCourseObj.MenuCourse != null)
        {
            <div class="col-4 p-4">
                <img src="@Model.MenuCourseObj.MenuCourse.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            </div>
        }


    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });

        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                swal("Error", "Please Select an Image", "error")
                return false;
            }
            return true;
        };
    </script>


}